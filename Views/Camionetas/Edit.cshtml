@model SistemaMantencion.Models.Camioneta

@{
    ViewData["Title"] = "Editar Camioneta";
}

<h1>✏️ Editar Camioneta</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FechaRegistro" />
            
            <div class="form-group mb-3">
                <label asp-for="Patente" class="control-label"></label>
                <input asp-for="Patente" class="form-control" />
                <span asp-validation-for="Patente" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Anio" class="control-label">Año</label>
                <input asp-for="Anio" class="form-control" type="number" min="2000" max="2025" />
                <span asp-validation-for="Anio" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Kilometraje" class="control-label"></label>
                <input asp-for="Kilometraje" class="form-control" type="number" min="0" />
                <span asp-validation-for="Kilometraje" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-select">
                    <option value="Disponible">Disponible</option>
                    <option value="EnArriendo">En Arriendo</option>
                    <option value="EnMantencion">En Mantención</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}