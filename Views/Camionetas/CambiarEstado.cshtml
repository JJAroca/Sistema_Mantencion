@model SistemaMantencion.Models.Camioneta

@{
    ViewData["Title"] = "Cambiar Estado";
}

<h1>üîÑ Cambiar Estado de Camioneta</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-body">
                <h5>Informaci√≥n de la Camioneta</h5>
                <dl class="row">
                    <dt class="col-sm-4">Patente:</dt>
                    <dd class="col-sm-8"><strong>@Model.Patente</strong></dd>
                    
                    <dt class="col-sm-4">Veh√≠culo:</dt>
                    <dd class="col-sm-8">@Model.Marca @Model.Modelo (@Model.Anio)</dd>
                    
                    <dt class="col-sm-4">Estado Actual:</dt>
                    <dd class="col-sm-8">
                        @if (Model.Estado == "Disponible")
                        {
                            <span class="badge bg-success">@Model.Estado</span>
                        }
                        else if (Model.Estado == "EnArriendo")
                        {
                            <span class="badge bg-warning">En Arriendo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">En Mantenci√≥n</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
        
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Cambiar a Nuevo Estado</h5>
                <form asp-action="CambiarEstado" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    
                    <div class="form-group mb-3">
                        <label for="nuevoEstado" class="control-label">Nuevo Estado</label>
                        <select name="nuevoEstado" id="nuevoEstado" class="form-select" required>
                            <option value="">-- Seleccione --</option>
                            @foreach (var estado in ViewBag.Estados)
                            {
                                <option value="@estado" selected="@(estado == Model.Estado ? "selected" : null)">
                                    @(estado == "EnArriendo" ? "En Arriendo" : estado == "EnMantencion" ? "En Mantenci√≥n" : estado)
                                </option>
                            }
                        </select>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label for="motivo" class="control-label">Motivo del Cambio</label>
                        <textarea name="motivo" 
                                  id="motivo" 
                                  class="form-control" 
                                  rows="3"
                                  placeholder="Describe el motivo del cambio de estado..."></textarea>
                    </div>
                    
                    <div class="alert alert-info">
                        <strong>‚ÑπÔ∏è Nota:</strong> El cambio de estado quedar√° registrado en el historial de la camioneta.
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            üíæ Guardar Cambio
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}