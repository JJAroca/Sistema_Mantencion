@model SistemaMantencion.Models.Camioneta

@{
    ViewData["Title"] = "Nueva Camioneta";
}

<h1>➕ Agregar Nueva Camioneta</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Patente" class="control-label"></label>
                <input asp-for="Patente" class="form-control" placeholder="ABCD12" />
                <span asp-validation-for="Patente" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" placeholder="Toyota" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" placeholder="Hilux" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Anio" class="control-label">Año</label>
                <input asp-for="Anio" class="form-control" type="number" min="2000" max="2025" value="2023" />
                <span asp-validation-for="Anio" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Kilometraje" class="control-label">Kilometraje Inicial</label>
                <input asp-for="Kilometraje" class="form-control" type="number" min="0" value="0" />
                <span asp-validation-for="Kilometraje" class="text-danger"></span>
            </div>
            
            <div class="alert alert-info">
                <strong>ℹ️ Nota:</strong> La camioneta se agregará con estado "Disponible" automáticamente.
            </div>
            
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}