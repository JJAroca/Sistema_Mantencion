@model IEnumerable<SistemaMantencion.Models.RegistroMantencion>

@{
    ViewData["Title"] = "Mantenciones";
}

<h1>ðŸ”§ Registro de Mantenciones</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">âž• Nueva MantenciÃ³n</a>
    <a asp-action="Index" class="btn btn-secondary">Todas</a>
    <a asp-action="Index" asp-route-estadoFiltro="EnProceso" class="btn btn-warning">En Proceso</a>
    <a asp-action="Index" asp-route-estadoFiltro="Completada" class="btn btn-success">Completadas</a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Camioneta</th>
            <th>Tipo</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Kilometraje</th>
            <th>Costo</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var camioneta = item.Camioneta;
            <tr>
                <td>@item.Id</td>

                <td>
                    @if (camioneta != null)
                    {
                        <text>@camioneta.Patente - @camioneta.Marca</text>
                    }
                    else
                    {
                        <span class="text-danger">Sin camioneta</span>
                    }
                </td>

                <td>
                    @if (string.Equals(item.TipoMantencion, "Preventiva", StringComparison.OrdinalIgnoreCase))
                    {
                        <span class="badge bg-info">@item.TipoMantencion</span>
                    }
                    else if (string.Equals(item.TipoMantencion, "Correctiva", StringComparison.OrdinalIgnoreCase))
                    {
                        <span class="badge bg-warning">@item.TipoMantencion</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@item.TipoMantencion</span>
                    }
                </td>

                <td>@item.FechaInicio.ToString("dd/MM/yyyy")</td>

                <td>
                    @if (item.FechaFin.HasValue)
                    {
                        @item.FechaFin.Value.ToString("dd/MM/yyyy")
                    }
                    else
                    {
                        <span class="text-muted">En proceso</span>
                    }
                </td>

                <td>@item.KilometrajeRegistrado.ToString("N0") km</td>

                <td>
                    @if (item.Costo.HasValue)
                    {
                        <text>$@item.Costo.Value.ToString("N0")</text>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>

                <td>
                    @if (item.Estado == "EnProceso")
                    {
                        <span class="badge bg-warning">En Proceso</span>
                    }
                    else if (item.Estado == "Completada")
                    {
                        <span class="badge bg-success">Completada</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Desconocido</span>
                    }
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Ver</a>

                    @if (item.Estado == "EnProceso")
                    {
                        <a asp-action="Completar" asp-route-id="@item.Id" class="btn btn-sm btn-success">Completar</a>
                    }

                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No hay mantenciones registradas. <a asp-action="Create">Crear la primera</a>
    </div>
}
