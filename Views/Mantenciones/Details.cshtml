@model SistemaMantencion.Models.RegistroMantencion

@{
    ViewData["Title"] = "Detalles Mantenci√≥n";
}

<h1>üîç Detalles de Mantenci√≥n #@Model.Id</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4>Informaci√≥n de la Mantenci√≥n</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-5">Camioneta:</dt>
                    <dd class="col-sm-7">
                        <strong>@Model.Camioneta.Patente</strong>
                        <br/>
                        @Model.Camioneta.Marca @Model.Camioneta.Modelo
                    </dd>
                    
                    <dt class="col-sm-5">Tipo de Mantenci√≥n:</dt>
                    <dd class="col-sm-7">
                        @if (Model.TipoMantencion == "Preventiva")
                        {
                            <span class="badge bg-info">@Model.TipoMantencion</span>
                        }
                        else if (Model.TipoMantencion == "Correctiva")
                        {
                            <span class="badge bg-warning">@Model.TipoMantencion</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@Model.TipoMantencion</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-5">Estado:</dt>
                    <dd class="col-sm-7">
                        @if (Model.Estado == "EnProceso")
                        {
                            <span class="badge bg-warning">En Proceso</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Completada</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-5">Fecha Inicio:</dt>
                    <dd class="col-sm-7">@Model.FechaInicio.ToString("dd/MM/yyyy HH:mm")</dd>
                    
                    <dt class="col-sm-5">Fecha Fin:</dt>
                    <dd class="col-sm-7">
                        @if (Model.FechaFin.HasValue)
                        {
                            @Model.FechaFin.Value.ToString("dd/MM/yyyy HH:mm")
                        }
                        else
                        {
                            <span class="text-muted">En proceso</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-5">Duraci√≥n:</dt>
                    <dd class="col-sm-7">
                        @if (Model.FechaFin.HasValue)
                        {
                            var duracion = (Model.FechaFin.Value - Model.FechaInicio).Days;
                            <text>@duracion d√≠as</text>
                        }
                        else
                        {
                            var duracion = (DateTime.Now - Model.FechaInicio).Days;
                            <text>@duracion d√≠as (en curso)</text>
                        }
                    </dd>
                    
                    <dt class="col-sm-5">Kilometraje:</dt>
                    <dd class="col-sm-7">@Model.KilometrajeRegistrado.ToString("N0") km</dd>
                    
                    <dt class="col-sm-5">Costo:</dt>
                    <dd class="col-sm-7">
                        @if (Model.Costo.HasValue)
                        {
                            <strong>$@Model.Costo.Value.ToString("N0")</strong>
                        }
                        else
                        {
                            <span class="text-muted">No registrado</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-secondary text-white">
                <h4>Descripci√≥n y Observaciones</h4>
            </div>
            <div class="card-body">
                <h6>Descripci√≥n del Trabajo:</h6>
                <p>@(Model.Descripcion ?? "Sin descripci√≥n")</p>
                
                <hr/>
                
                <h6>Observaciones:</h6>
                <p>@(Model.Observaciones ?? "Sin observaciones")</p>
            </div>
        </div>
        
        <div class="mt-3">
            @if (Model.Estado == "EnProceso")
            {
                <a asp-action="Completar" asp-route-id="@Model.Id" class="btn btn-success">
                    ‚úÖ Completar Mantenci√≥n
                </a>
            }
            <a asp-action="Index" class="btn btn-outline-primary">Volver al Listado</a>
        </div>
    </div>
</div>