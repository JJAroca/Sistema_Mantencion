@model SistemaMantencion.Models.RegistroMantencion

@{
    ViewData["Title"] = "Nueva Mantención";
}

<h1>➕ Registrar Nueva Mantención</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Selección de camioneta -->
            <div class="form-group mb-3">
                <label asp-for="CamionetaId" class="control-label">Camioneta *</label>
                <select asp-for="CamionetaId" class="form-select" asp-items="ViewBag.Camionetas" required>
                    <option value="">-- Seleccione una camioneta --</option>
                </select>
                <span asp-validation-for="CamionetaId" class="text-danger"></span>
            </div>

            <!-- Tipo de mantención -->
            <div class="form-group mb-3">
                <label asp-for="TipoMantencion" class="control-label">Tipo de Mantención *</label>
                <select asp-for="TipoMantencion" class="form-select" required>
                    <option value="">-- Seleccione --</option>

                    @if (ViewBag.TiposMantenciones != null)
                    {
                        foreach (var tipo in ViewBag.TiposMantenciones)
                        {
                            <option value="@tipo">@tipo</option>
                        }
                    }
                </select>
                <span asp-validation-for="TipoMantencion" class="text-danger"></span>
            </div>

            <!-- Observaciones -->
            <div class="form-group mb-3">
                <label asp-for="Observaciones" class="control-label">Observaciones</label>
                <textarea asp-for="Observaciones" class="form-control" rows="3"
                          placeholder="Describa los trabajos o detalles de la mantención..."></textarea>
                <span asp-validation-for="Observaciones" class="text-danger"></span>
            </div>

            <!-- Fecha de inicio -->
            <div class="form-group mb-3">
                <label asp-for="FechaInicio" class="control-label">Fecha de Inicio *</label>
                <input asp-for="FechaInicio" class="form-control" type="date" required />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>

            <!-- Costo estimado -->
            <div class="form-group mb-3">
                <label asp-for="Costo" class="control-label">Costo Estimado</label>
                <input asp-for="Costo" class="form-control" type="number" min="0" step="1000" placeholder="0" />
                <span asp-validation-for="Costo" class="text-danger"></span>
            </div>

            <!-- Advertencia -->
            <div class="alert alert-warning">
                <strong>⚠️ Atención:</strong>
                Al registrar la mantención:
                <ul>
                    <li>La camioneta cambiará a estado <strong>En Mantención</strong></li>
                    <li>No estará disponible para arriendos</li>
                    <li>Se registrará el kilometraje actual automáticamente</li>
                </ul>
            </div>

            <!-- Botones -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Registrar Mantención</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
