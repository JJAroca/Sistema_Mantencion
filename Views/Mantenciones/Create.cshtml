@model SistemaMantencion.Models.RegistroMantencion

@{
    ViewData["Title"] = "Nueva Mantención";
}

<h1>➕ Registrar Nueva Mantención</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="CamionetaId" class="control-label">Camioneta</label>
                <select asp-for="CamionetaId" class="form-select" asp-items="ViewBag.Camionetas">
                    <option value="">-- Seleccione una camioneta --</option>
                </select>
                <span asp-validation-for="CamionetaId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="TipoMantencion" class="control-label">Tipo de Mantención</label>
                <select asp-for="TipoMantencion" class="form-select">
                    <option value="">-- Seleccione --</option>
                    @foreach (var tipo in ViewBag.TiposMantenciones)
                    {
                        <option value="@tipo">@tipo</option>
                    }
                </select>
                <span asp-validation-for="TipoMantencion" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Descripcion" class="control-label">Descripción</label>
                <textarea asp-for="Descripcion" class="form-control" rows="3" 
                          placeholder="Describa los trabajos a realizar..."></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            
            <div class="alert alert-warning">
                <strong>⚠️ Atención:</strong> 
                Al registrar la mantención:
                <ul>
                    <li>La camioneta cambiará a estado "En Mantención"</li>
                    <li>No estará disponible para arriendos</li>
                    <li>Se registrará el kilometraje actual automáticamente</li>
                </ul>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Registrar Mantención" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}